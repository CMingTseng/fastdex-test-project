<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="116dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:background="@drawable/bg_share_prize">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="请选择赠送对象"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginTop="25dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="272dp"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/tv_share_to_wechat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="赠送亲友"
                    android:background="@drawable/rect_white_bg_shape"
                    android:layout_marginRight="10dp"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_share_to_wechat_moments"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/rect_white_bg_shape"
                    android:text="犒赏众卿"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_wechat"
                    android:layout_marginLeft="48dp"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_wechat_moment"
                    android:layout_marginLeft="105dp"/>
            </LinearLayout>

        </FrameLayout>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lottery_close"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dp"
            android:layout_marginRight="20dp" />

    </RelativeLayout>

</LinearLayout>