<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/itemTradePlan" android:layout_width="match_parent" android:background="@drawable/bg_teacher_trade"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_buy_type" android:layout_width="18dp" android:text="空" android:textColor="@color/white"
            android:layout_height="18dp" android:background="@color/green" android:textSize="@dimen/text_sSize" android:gravity="center"
            android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="4dp" />
        <me.grantland.widget.AutofitTextView
            android:id="@+id/tv_category_name" android:layout_width="match_parent" android:gravity="left|center_vertical"
            android:layout_height="wrap_content" android:textColor="@color/color_primary_black" tools:text="粤贵银" android:layout_toRightOf="@id/tv_buy_type"
            android:layout_alignTop="@id/tv_buy_type" android:textSize="14sp"  android:lines="1"
            android:layout_toLeftOf="@+id/tv_buy_time"/>
        <TextView
            android:id="@+id/tv_buy_time" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginRight="10dp"
            android:layout_alignBaseline="@+id/tv_category_name" android:gravity="right|center_vertical" android:textSize="11sp"
            android:textColor="@color/color_text_gray" tools:text="08-15  19:20:40" android:layout_alignParentRight="true"/>


        <TextView
            android:id="@+id/tv_teacher_trade_data_left" android:layout_width="wrap_content" android:lineSpacingExtra="10dp"
            android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_below="@id/tv_buy_type"
            android:textSize="@dimen/text_sSize" android:gravity="left|center_vertical" />
        <TextView
            android:id="@+id/tv_teacher_trade_data_right" android:layout_width="match_parent" android:lineSpacingExtra="10dp"
            android:layout_height="match_parent" android:layout_marginRight="10dp" android:layout_below="@id/tv_buy_type"
            android:textSize="@dimen/text_sSize"
            android:layout_toRightOf="@+id/tv_teacher_trade_data_left" android:gravity="right|center_vertical" />
    </RelativeLayout>

</LinearLayout>