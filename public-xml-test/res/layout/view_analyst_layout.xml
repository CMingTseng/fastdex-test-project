<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/ll_analyst_left"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_analyst_left"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/tv_analyst_left_main"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/color_accent_black"
            android:textSize="@dimen/text_mSize" />

        <TextView
            android:id="@+id/tv_analyst_left_sub"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/text_sSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_analyst_middle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_analyst_middle"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/tv_analyst_middle_main"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/color_accent_black"
            android:textSize="@dimen/text_mSize" />

        <TextView
            android:id="@+id/tv_analyst_middle_sub"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/text_sSize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_analyst_right"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_analyst_right"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/default_head" />

        <TextView
            android:id="@+id/tv_analyst_right_main"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/color_accent_black"
            android:textSize="@dimen/text_mSize" />

        <TextView
            android:id="@+id/tv_analyst_right_sub"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:textColor="@color/color_text_gray"
            android:textSize="@dimen/text_sSize" />
    </LinearLayout>

</LinearLayout>