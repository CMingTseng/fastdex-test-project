<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    android:id="@+id/ll_market_position"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="143dp">
        <TextView
            android:id="@+id/tv_market_position"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="市价建仓"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:background="@drawable/rect_white_gray"
            android:textSize="15dp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/tv_limit_position"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="限价建仓"
            android:gravity="center"
            android:background="@drawable/rect_gray_white"
            android:layout_marginRight="15dp"
            android:textSize="15dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_buy_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/dialog_guide_market_position"
            android:layout_marginLeft="70dp"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/iv_buy_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/dialog_guide_limit_position"
            android:layout_marginLeft="20dp"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>