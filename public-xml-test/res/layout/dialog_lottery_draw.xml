<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true">
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:background="@drawable/lottery_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_get_gift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="恭喜获得"
                    android:textSize="32sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="30dp"/>

                <TextView
                    android:id="@+id/tv_present"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_get_gift"
                    android:text="银元宝"
                    android:gravity="center"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="33sp"
                    android:textColor="@color/yellow"
                    android:layout_marginTop="3dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/tv_immediately_receive"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="立即领取"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/trade_again_shape"/>
                    <TextView
                        android:id="@+id/tv_given_friend"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="赠送好友"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/lottery_again_shape"/>
                </LinearLayout>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="140dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="130dp">

                <ImageView
                    android:id="@+id/iv_silver_ingot"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ProgressBar
                    android:id="@+id/pb"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:visibility="gone"/>
            </FrameLayout>

        </FrameLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lottery_close"
            android:layout_alignParentRight="true"
            android:layout_marginTop="130dp"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
</FrameLayout>