<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_loss_lottery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/loss_lottery"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_loss_lottery">
                <TextView
                    android:id="@+id/tv_trade_again"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="继续交易"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/trade_again_shape"/>
                <TextView
                    android:id="@+id/tv_lottery_again"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="继续抽奖"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/lottery_again_shape"/>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lottery_close"
            android:layout_alignParentRight="true"
            android:layout_marginTop="130dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
</LinearLayout>