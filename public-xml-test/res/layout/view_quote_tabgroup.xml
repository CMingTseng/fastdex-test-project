<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_ygy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ygy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="粤贵银"
            android:textColor="@color/tab_text_checked"
            android:textSize="16sp" />

        <View
            android:id="@+id/indicator_view_ygy"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/tab_hint" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ygyd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ygyd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="粤贵银锭"
            android:textColor="@color/tab_text_checked"
            android:textSize="16sp" />

        <View
            android:id="@+id/indicator_view_ygyd"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/tab_hint" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ygba"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ygba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="粤贵钯"
            android:textColor="@color/tab_text_checked"
            android:textSize="16sp" />

        <View
            android:id="@+id/indicator_view_ygba"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/tab_hint" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ygbo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ygbo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="粤贵铂"
            android:textColor="@color/tab_text_checked"
            android:textSize="16sp" />

        <View
            android:id="@+id/indicator_view_ygbo"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/tab_hint" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="更多"
            android:textColor="@color/tab_text_checked"
            android:textSize="16sp" />

        <View
            android:id="@+id/indicator_view_more"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/tab_hint" />
    </LinearLayout>

</LinearLayout>