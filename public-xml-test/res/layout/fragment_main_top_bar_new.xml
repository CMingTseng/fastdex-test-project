<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/bg_title_color">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_centerInParent="true">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/home_bar_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        />

</LinearLayout>
<FrameLayout
    android:id="@+id/btn_video" android:layout_width="wrap_content" android:layout_toLeftOf="@+id/btn_my_notice"
    android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginRight="5dp">
    <ImageView
        android:id="@+id/iv_video" android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/main_video_ic" android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tv_video_hint" android:layout_width="wrap_content"
        android:layout_height="13dp" android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp" android:background="@drawable/main_red_radius15"
        android:clickable="false" android:gravity="center" android:paddingLeft="2dp"
        android:paddingRight="2dp" android:text="直播" android:layout_gravity="top|right"
        android:textColor="@color/white" android:textSize="9sp" android:visibility="invisible"/>
</FrameLayout>
<FrameLayout
    android:id="@+id/btn_my_notice" android:layout_width="wrap_content" android:layout_centerVertical="true"
    android:layout_height="wrap_content" android:layout_alignParentRight="true"
    android:layout_marginRight="12dp">
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp" android:layout_gravity="center"
        android:src="@drawable/icon_my_notice"/>
    <TextView
        android:id="@+id/tv_advert_hint" android:layout_width="14dp"
        android:layout_height="14dp" android:layout_marginBottom="20dp" android:layout_gravity="top|right"
        android:layout_marginLeft="20dp" android:background="@drawable/main_red_circle"
        android:gravity="center" tools:text="1" android:textColor="@color/white"
        android:textSize="9sp" android:visibility="invisible"/>
</FrameLayout>
</RelativeLayout>