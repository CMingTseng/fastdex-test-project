<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        style="@style/ListViewItemPadding">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar" android:layout_width="@dimen/itemAvatar"
            android:layout_height="@dimen/itemAvatar" android:layout_marginRight="12dp"/>
        <TextView
            android:id="@+id/tv_teacher_name" android:layout_width="wrap_content" tools:text="王建华"
            android:textColor="@color/color_accent_blue" android:textSize="14sp"
            android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_avatar" android:layout_toLeftOf="@+id/tv_time"/>
        <TextView
            android:id="@+id/tv_time" android:layout_width="wrap_content" android:gravity="center"
            android:layout_height="wrap_content" tools:text="14:35" android:textColor="@color/color_text_gray"
            android:layout_alignParentRight="true" android:textSize="@dimen/text_sSize" android:lines="1" android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_title" android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:text="整点解析" android:textColor="@color/color_accent_black"
            android:layout_below="@+id/tv_teacher_name" android:textSize="14sp" android:lines="1" android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_avatar" android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/tv_content" android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:text="白银震荡上行"
            android:textColor="@color/color_text_black" android:textSize="@dimen/text_sSize"
            android:layout_below="@+id/tv_title" android:maxLines="2" android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_avatar" android:layout_marginTop="3dp" android:lineSpacingExtra="2dp"/>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="0.5dp"
        android:layout_marginLeft="62dp" android:background="@color/color_divider_line" />
</LinearLayout>



